@using Compliance.Dashboard.UI.Models
@model LoginPageCommonModel

@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "registerform" }))
{
    <p>Enter information to register:</p>

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="input-group">
        <span class="input-group-addon"><i class="icon-user"></i></span>
        @Html.TextBoxFor(m => m.RegisterViewModel.FirstName, new { @id = "", @class = "form-control", @placeholder = "Enter First name" })
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="icon-user"></i></span>
        @Html.TextBoxFor(m => m.RegisterViewModel.LastName, new { @id = "", @class = "form-control", @placeholder = "Enter Last name" })
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="icon-envelope"></i></span>
        @Html.TextBoxFor(m => m.RegisterViewModel.Email, new { @id = "", @class = "form-control", @placeholder = "Enter E-mail address" })
    </div>

        <div class="input-group">
            <span class="input-group-addon"><i class="icon-lock"></i></span>
            @Html.PasswordFor(m => m.RegisterViewModel.Password, new { @id = "", @class = "form-control", @placeholder = "Password" })
        </div>
        <div class="input-group">
            <span class="input-group-addon"><i class="icon-lock"></i></span>
            @Html.PasswordFor(m => m.RegisterViewModel.ConfirmPassword, new { @id = "", @class = "form-control", @placeholder = "Confirm password" })
        </div>
        <div class="form-actions clearfix">
            <div class="pull-left">
                <a href="#loginform" class="grey flip-link to-login">Click to login</a>
            </div>
            <div class="pull-right">
                <a href="#recoverform" class="grey flip-link to-recover">Lost password?</a>
            </div>
            <input type="submit" class="btn btn-block btn-success" value="Register" />
        </div>


}
